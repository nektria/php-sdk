#!/bin/bash
trap "exit 1" ERR

USE_GOOGLE=''
DOCKER_IMAGE='php-sdk'

print_usage() {
  printf "Usage: bin/tools/php-cs-fixer [-l|g] \n"
}

while getopts 'lg' flag; do
  case "$flag" in
    g) USE_GOOGLE='1';;
    *) print_usage
       exit 1 ;;
  esac
done

if [ "$USE_GOOGLE" = '1' ]; then
  php -d memory_limit=-1 vendor/bin/php-cs-fixer fix src --allow-risky=yes --using-cache=no --dry-run --config=server/php-sdk/php-cs-fixer.dist.php
else
  docker exec -i "$DOCKER_IMAGE" php -d memory_limit=-1 vendor/bin/php-cs-fixer fix src --allow-risky=yes --using-cache=no --config=server/php-sdk/php-cs-fixer.dist.php
fi

