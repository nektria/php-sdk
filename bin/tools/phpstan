#!/bin/bash
trap "exit 1" ERR

PIPELINE=''
DOCKER_IMAGE='nektria-sdk'

print_usage() {
  printf "Usage: bin/tools/phpstan [-l|g] \n"
}

while getopts 'p' flag; do
  case "$flag" in
    p) PIPELINE='1';;
    *) print_usage
       exit 1 ;;
  esac
done

if [ "$PIPELINE" = '1' ]; then
  php -d memory_limit=-1 vendor/bin/phpstan analyze -c server/nektria-sdk/phpstan.neon --no-progress
else
  docker exec -i "$DOCKER_IMAGE" php -d memory_limit=-1 vendor/bin/phpstan analyze -c server/nektria-sdk/phpstan.neon --no-progress
fi

