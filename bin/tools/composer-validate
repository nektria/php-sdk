#!/bin/bash
trap "exit 1" ERR

PIPELINE=''
DOCKER_IMAGE='php-sdk'

print_usage() {
  printf "Usage: bin/php-cs-fixer [-l|g] \n"
}

while getopts 'p' flag; do
  case "$flag" in
    p) PIPELINE='1';;
    *) print_usage
       exit 1 ;;
  esac
done

if [ "$PIPELINE" = '1' ]; then
  composer validate
else
  docker exec -i "$DOCKER_IMAGE" composer validate
fi
